{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "outDir": "lib",
    "experimentalDecorators": true,
    "declaration": true,
    "useDefineForClassFields": false,
    "lib": ["DOM", "ES2019"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.stories.ts"]
}
