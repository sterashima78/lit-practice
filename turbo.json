{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/generated/**"],
      "inputs": []
    },
    "type-check": {
      "dependsOn": ["generate", "^build"],
      "outputs": [],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "build": {
      "dependsOn": ["^build", "type-check"],
      "outputs": [
        "dist/**",
        "lib/**"
      ],
      "inputs": ["src/**", "tsconfig.json", "vite.config.ts"]
    }
  }
}
